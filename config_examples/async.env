# 复制到项目根目录并重命名为 .env.local.async
# 异步配置文件 - Async Configuration
# 异步IO相关参数配置

# RAG查询超时配置
RAG_QUERY_TIMEOUT=30
EVALUATOR_TIMEOUT=45

# 并发控制配置
MAX_CONCURRENCY=3
BATCH_SIZE=10

# 重试机制配置
RETRY_ATTEMPTS=2
RETRY_DELAY=1.0

# 异步HTTP客户端配置
ASYNC_HTTP_TIMEOUT=30
ASYNC_HTTP_POOL_SIZE=10
ASYNC_HTTP_MAX_CONNECTIONS=20

# 进度跟踪配置
PROGRESS_UPDATE_INTERVAL=1.0
PROGRESS_ENABLED=true

# 日志配置
ASYNC_LOG_LEVEL=INFO
ASYNC_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s